<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.memberCenter.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:background="@color/pub_backgroud_color"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_mSecurity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="安全设置"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_mLanguage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="多语言"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_mMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="通知"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_mPrivacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="隐私"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14"
                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_mUsinghelp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="使用帮助"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:background="@color/pub_backgroud_color"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_mCache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="缓存"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tv_Cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0M"
                android:textColor="@color/tvc9" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_mFeedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意见反馈"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_mAbout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/parent_margin_large"
            android:layout_marginLeft="@dimen/parent_margin_large"
            android:layout_marginRight="@dimen/parent_margin_large"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_btn_circle_red"
            android:gravity="center"
            android:padding="@dimen/parent_margin"
            android:text="退出当前账户"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

</LinearLayout>
