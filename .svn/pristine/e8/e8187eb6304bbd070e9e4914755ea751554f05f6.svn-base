<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.memberCenter.SettingLanguageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_mChinese"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中文"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tv_Chinese"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/selector_check_single" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:id="@+id/layout_mThai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ไทย"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tv_Thai"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/selector_check_single" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />
</LinearLayout>
