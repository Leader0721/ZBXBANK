<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/background_apply" />

            <com.pub.widget.MyListView
                android:id="@+id/mListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin"
                android:divider="@color/pub_line_color"
                android:dividerHeight="@dimen/line_height" />

            <LinearLayout
                android:id="@+id/ll_creat_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/parent_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还未创建企业,点击"
                    android:textColor="@color/tvc3" />

                <TextView
                    android:id="@+id/tv_creat_company_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建企业"
                    android:textColor="@color/cpb_blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_btn_radius_blue"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/parent_margin"
                android:text="申请企业贷款"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"
                android:layout_marginBottom="@dimen/parent_margin_large"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>