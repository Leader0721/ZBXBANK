<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.MainPersonalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/MyHeadPortrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mPortrait"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/userhead_img"
                    app:civ_border_color="@color/pub_backgroud_color"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:civ_fill_color="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mRemarkName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="姓名"
                            android:textColor="@color/tvc3"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:gravity="center"
                            android:drawableLeft="@mipmap/geren_dianhau"
                            android:drawablePadding="@dimen/parent_margin"
                            android:id="@+id/mPhonenumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textColor="@color/tvc9"
                            android:textSize="@dimen/textsize_12" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_divider_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/mCompany"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kuang_height"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/geren_qiye" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="我的企业"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/tv_mCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_divider_1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="48dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mCollect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kuang_height"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/geren_soucang" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="收藏"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_mCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_divider_1" />
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mAchievement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kuang_height"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/geren_chengjiu" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="成就"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <TextView
                    android:id="@+id/tv_mAchievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_divider_1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/mSetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kuang_height"
                android:background="@drawable/bg_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/geren_shezi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="设置"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/tv_mSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_15" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_divider_1" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
