<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pub_backgroud_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple"
        android:orientation="vertical"
        android:padding="@dimen/parent_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申请行"
                android:textColor="@color/tvc6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_apply_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tvc3"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申请时间"
                android:textColor="@color/tvc6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tvc3"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="贷款金额(万)"
                android:textColor="@color/tvc6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_apply_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tvc3"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_apply_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申请状态"
                android:textColor="@color/tvc6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_apply_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_apply_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin_top"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="备注"
                android:textColor="@color/tvc6"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_apply_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:gravity="right"
                android:textColor="@color/tvc3"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_apply_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin_top"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申请企业"
                android:textSize="15dp"
                android:textColor="@color/tvc6" />

            <TextView
                android:id="@+id/tv_apply_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:textSize="15dp"
                android:gravity="right"
                android:textColor="@color/tvc3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>