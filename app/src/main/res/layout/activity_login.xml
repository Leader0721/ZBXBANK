<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mContentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zbxn.main.activity.login.LoginActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登   录"
                android:textSize="20sp"
                android:textColor="@color/tvc3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/myUserName"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@mipmap/logon_user_name"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_16" />


                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:gravity="center_vertical"
                    android:id="@+id/mUserName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="@color/tvc3"
                    android:textColorHint="@color/tvcc"
                    android:textSize="@dimen/textsize_16" />

                <ImageView
                    android:id="@+id/deleteNum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/logon_cancel"
                    android:visibility="invisible" />

            </LinearLayout>

            <View
                android:id="@+id/num_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pub_line_color" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/myPassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@mipmap/logon_cipher"
                    android:textColor="@color/tvc3"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:gravity="center_vertical"
                    android:id="@+id/mPassword"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:hint="密码（8到20位字符或数字）"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/tvc3"
                    android:textColorHint="@color/tvcc"
                    android:textSize="@dimen/textsize_16" />

                <ImageView
                    android:id="@+id/isPassWordVis"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/temp142"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/deletePassword"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/logon_cancel"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/psw_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pub_line_color" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white" />

        <!--<com.dd.CircularProgressButton-->
        <!--android:id="@+id/mBtnLogin"-->
        <!--style="@style/circularprogressbutton_default"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="46dp"-->
        <!--android:layout_marginTop="24dp"-->
        <!--android:textSize="@dimen/app_text_16_middle"-->
        <!--app:cpb_textIdle="登\u3000录" />-->



            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="登\u3000录"
                android:textColor="@drawable/selector_tv_color_white"
                android:textSize="@dimen/textsize_18"
                android:background="@drawable/selector_btn_radius_blue"
                android:gravity="center" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textsize_20"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/textsize_8">

            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/mForgetPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="忘记密码"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical|end"
                android:textColor="@color/tvc6"
                android:textSize="@dimen/textsize_14" />
            <ImageView
                android:background="@color/tvc9"
                android:layout_width="@dimen/line_height"
                android:layout_height="15dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/mRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:text="立即注册"
                android:textColor="@color/tvc6"
                android:textSize="@dimen/textsize_14" />


        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
