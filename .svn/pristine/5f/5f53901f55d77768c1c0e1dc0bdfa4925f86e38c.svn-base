<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_security"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.memberCenter.SettingsSecurityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pub_backgroud_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/layout_mAlterPsw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ripple"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改登录密码"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:id="@+id/layout_mAlterPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改手机号"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/mPhonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/parent_margin"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_mAlterEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改邮箱号"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tv_Email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/parent_margin"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
