<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting_privacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.memberCenter.SettingPrivacyActivity">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="允许任何人加我好友"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/rb_all"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/selector_check_single" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:id="@+id/layout_none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="不允许任何人加我好友"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/rb_none"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/selector_check_single" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/pub_line_color" />

        <LinearLayout
            android:id="@+id/layout_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kuang_height"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ripple"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin_large"
            android:paddingRight="@dimen/parent_margin_large"
            android:paddingTop="@dimen/parent_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加我好友需要验证"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/rb_verify"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/selector_check_single" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
