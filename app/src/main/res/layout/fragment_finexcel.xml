<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_televeCircle"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_one"
                android:layout_margin="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_two"
                android:layout_margin="5dp"
                android:text="2"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_three"
                android:layout_margin="5dp"
                android:text="3"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_four"
                android:layout_margin="5dp"
                android:text="4"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_five"
                android:layout_margin="5dp"
                android:text="5"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_six"
                android:layout_margin="5dp"
                android:text="6"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_seven"
                android:layout_margin="5dp"
                android:text="7"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_eight"
                android:layout_margin="5dp"
                android:text="8"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_nine"
                android:layout_margin="5dp"
                android:text="9"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ten"
                android:layout_margin="5dp"
                android:text="10"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_eleven"
                android:layout_margin="5dp"
                android:text="11"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_blue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_twelve"
                android:layout_margin="5dp"
                android:text="12"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_textview_red"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:paddingTop="10dp"
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:headerDividersEnabled="false" />
</LinearLayout>