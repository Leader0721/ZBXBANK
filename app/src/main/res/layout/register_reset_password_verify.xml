<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mContentLayout"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_back"
        android:padding="@dimen/parent_margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/main_tab_text_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密码"
                android:textSize="20sp"
                android:textColor="@color/tvc3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="+86"
                    android:textColor="@color/main_tab_text_blue_light"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_marginLeft="@dimen/parent_margin_large"
                    android:layout_width="@dimen/line_height"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/pub_line_color" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:gravity="center_vertical"
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="@color/tvc3"
                    android:textColorHint="@color/tvcc"
                    android:textSize="@dimen/textsize_16" />

                <ImageView
                    android:id="@+id/etDeleteNum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/logon_cancel"
                    android:visibility="invisible" />

            </LinearLayout>

            <View
                android:id="@+id/num_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pub_line_color" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:gravity="center_vertical"
                    android:id="@+id/etVerificationCode"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/tvc3"
                    android:textColorHint="@color/tvcc"
                    android:textSize="@dimen/textsize_16" />

                <ImageView
                    android:id="@+id/deletePassword"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/logon_cancel"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/btGainCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:paddingLeft="@dimen/parent_margin"
                    android:gravity="center"
                    android:layout_margin="@dimen/parent_margin_top"
                    android:text="获取验证码"
                    android:textColor="@color/main_tab_text_blue_light"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <View
                android:id="@+id/psw_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pub_line_color" />
        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/btNext"
            android:background="@drawable/selector_btn_radius_blue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/textsize_16"
            android:textColor="@drawable/selector_tv_color_white"
            android:text="提交" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
