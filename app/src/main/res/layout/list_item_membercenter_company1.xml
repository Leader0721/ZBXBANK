<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple">

    <RelativeLayout
        android:id="@+id/mLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin">

        <TextView
            android:id="@+id/mPortrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginTop="@dimen/parent_margin"
            android:background="@drawable/bg_circle_view_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_Portrait"
            android:src="@mipmap/userhead_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginTop="@dimen/parent_margin"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/mPortrait"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/parent_margin"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/textsize_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/parent_margin"
                android:src="@mipmap/position_total" />

            <TextView
                android:id="@+id/mCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="25258"
                android:textColor="@color/tvc8"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="进入"
                android:textColor="@color/tvc9" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/parent_margin"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
