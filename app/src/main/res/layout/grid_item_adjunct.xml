<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/parent_margin"
    android:paddingTop="@dimen/parent_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.pub.widget.FilletImageView
            android:id="@+id/img_content"
            android:layout_width="123dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/attachment_no"
            zhy:borderRadius="5dp"
            zhy:type="round" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/img_content"
            android:layout_alignTop="@id/img_content"
            android:layout_margin="@dimen/parent_margin_top"
            android:visibility="gone"
            android:src="@mipmap/attachment_again" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_content"
            android:layout_alignRight="@id/img_content"
            android:layout_margin="@dimen/parent_margin_top"
            android:text="0"
            android:textColor="@color/tvc3" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/parent_margin_top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="营业执照(上传)"
            android:textColor="@color/tvc8" />
    </LinearLayout>

</LinearLayout>