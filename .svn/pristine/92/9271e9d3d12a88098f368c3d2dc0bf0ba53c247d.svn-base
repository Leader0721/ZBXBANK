<?xml version="1.0" encoding="utf-8"?><!-- 首页——底部菜单栏 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/pub_backgroud_color" />

    <LinearLayout
        android:id="@+id/layout_bottombar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_main_message_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="top"
                android:tag="@string/main_bottom_message"
                android:text="@string/main_bottom_message"
                android:textColor="@color/main_tab_text_blue"
                android:textSize="@dimen/textsize_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/mApp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_main_tools_uncheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="top"
                android:tag="@string/main_bottom_tools"
                android:text="@string/main_bottom_tools"
                android:textColor="@color/main_tab_text_gray"
                android:textSize="@dimen/textsize_10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_main_contact_uncheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="top"
                android:tag="@string/main_bottom_contact"
                android:text="@string/main_bottom_contact"
                android:textColor="@color/main_tab_text_gray"
                android:textSize="@dimen/textsize_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_main_membercenter_uncheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="top"
                android:tag="@string/main_bottom_personal"
                android:text="@string/main_bottom_personal"
                android:textColor="@color/main_tab_text_gray"
                android:textSize="@dimen/textsize_10" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
